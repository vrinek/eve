<!DOCTYPE html>
<html>
<head>
	<title><%= ["EveBox", @title].compact * " - " %></title>
	<%= stylesheet_link_tag "http://yui.yahooapis.com/2.8.0r4/build/reset/reset-min.css" %>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
</head>
<body id="<%= controller.action_name %>" class="<%= controller.controller_name %>" <%= request_trust %>>
	<%= render "application/header" %>
	
	<div id="main">
		<h1><%= @title %></h1>
		<%= yield %>
	</div>
	
	<%= render "application/footer" %>
	<%= render "application/google_analytics" %>
</body>
</html>
