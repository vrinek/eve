<!DOCTYPE html>
<html>
<head>
	<title><%= [@title, "EVE Box"].compact * " - " %></title>
	<%= stylesheet_link_tag "http://yui.yahooapis.com/2.8.0r4/build/reset/reset-min.css" %>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
	<meta name="description" content="<%= @description or "EVE Box contains a few useful tools for players of EVE Online MMORPG" %>">
</head>
<body id="<%= controller.action_name %>" class="<%= controller.controller_name %>" <%=raw request_trust %>>
	<%= render "application/header" %>
	
	<div id="main">
		<h1>
			<%= image_tag(Graphic.url(@icon, 64), :class => "icon", :size => "64x64") if @icon %>
			<%= @title %>
		</h1>
		<%= yield %>
	</div>
	
	<%= render "application/footer" %>
	<%= render "application/google_analytics" %>
</body>
</html>
